{{ if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env zsh

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.darwin.taps -}}
tap {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.fonts -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ end -}}